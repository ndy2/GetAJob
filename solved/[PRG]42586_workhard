#include <string>
#include <vector>
#include <cmath>
#include <iostream>

using namespace std;

vector<int> solution(vector<int> progresses, vector<int> speeds) {
    vector<int> answer;
    vector<int> days;
    int l = progresses.size();

    for(int i = 0 ; i < l ; i++)
        days.push_back(ceil((float)(100-progresses[i])/speeds[i]));

    int cur;
    int cur_max = days[0];
    for(int i = 0 ; i < l ; i ++)
    {
        int stt_idx = i+1;
        while(cur_max >= days[stt_idx] && stt_idx < l)
            stt_idx++;

        cur_max = days[stt_idx];
        answer.push_back(stt_idx-i);

        i = stt_idx-1;
    }

    return answer;
}
